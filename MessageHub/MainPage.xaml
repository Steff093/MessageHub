<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           x:Class="MessageHub.MainPage">
    
    <StackLayout>
        <Grid>
            <Button Command="{Binding ConnectToServerCommand}" HeightRequest="200" WidthRequest="50" />
            <Button Command="{Binding StartServerCommand }" Width="75" Height="30" Margin="715,410,10,10"/>
        </Grid>
        <Label Text="{Binding LogMessages}" 
               LineBreakMode="WordWrap" 
               VerticalOptions="FillAndExpand" 
               HorizontalOptions="FillAndExpand"/>
    </StackLayout>

</ContentPage>
